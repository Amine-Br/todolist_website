<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
<servlet>
	<servlet-name>Index</servlet-name>
	<servlet-class>com.example.servlet.SignupController</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>Index</servlet-name>
	<url-pattern>/auth</url-pattern>
</servlet-mapping>


<servlet>
	<servlet-name>Login</servlet-name>
	<servlet-class>com.example.servlet.LoginController</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>Login</servlet-name>
	<url-pattern>/login</url-pattern>
</servlet-mapping>


<servlet>
	<servlet-name>tasks</servlet-name>
	<servlet-class>com.example.servlet.tasksController</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>tasks</servlet-name>
	<url-pattern>/tasks</url-pattern>
</servlet-mapping>


<servlet>
	<servlet-name>updateprofile</servlet-name>
	<servlet-class>com.example.servlet.UpdateProfileController</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>updateprofile</servlet-name>
	<url-pattern>/update</url-pattern>
</servlet-mapping>
</web-app>